<div class="left-form">
  <div class="container-from-left-form"></div>
</div>

<div class="right-form">
  <%= form_tag model: privacy_notice, local: true do %>
    <% @questions.each_with_index do |question, index| %>
      <div class="current-qst question-<%= index + 1 %> <%= question.position == 1 ? '' : 'hidden'%>">
        <div class="question-title"><%= question.title %></div>
        <div class="labels-container">
          <% question.answers.each do |answer| %>
            <% if answer.answer_type == "radio" %>
              <div class="question-label radio-input"><%= answer.label %></div>
            <% elsif answer.answer_type == "text" %>
              <div class="question-label text-input"><%= answer.label %></div>
            <% elsif answer.answer_type == "checkbox" %>
              <div class="question-label checkbox-input"><%= answer.label %></div>
            <% elsif answer.answer_type == "select" %>
              <div class="question-label select-input"><%= answer.label %></div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
      <div class="form-buttons">
        <span class="previous-question">Back</span>
        <span class="next-question next-button purple-background">Next</span>
      </div>

  <% end %>
</div>
